{
  "name": "@tompto1/chart-widget",
  "version": "0.1.0",
  "description": "Recharts-based chart widget with legend panel, 18 chart types, outlier detection, and data quality visualization",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build:demo": "vite build",
    "preview": "vite preview",
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "build:lib": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "react-is": "^19.0.0",
    "recharts": "^3.5.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.474.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "tsup": "^8.0.0",
    "vite": "^6.0.0",
    "eslint": "^9.0.0"
  },
  "keywords": [
    "react",
    "chart",
    "recharts",
    "widget",
    "legend",
    "visualization",
    "typescript"
  ],
  "author": "TomPTo1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TomPTo1/sectorbook-chart-widget.git"
  },
  "bugs": {
    "url": "https://github.com/TomPTo1/sectorbook-chart-widget/issues"
  }
}
